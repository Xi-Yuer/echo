{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "echo",
  "version": "0.1.0",
  "identifier": "com.xiyuer.echo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "echo",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "maxWidth": null,
        "maxHeight": null,
        "resizable": true,
        "center": true
      },
      {
        "label": "popover",
        "title": "",
        "width": 400,
        "height": 500,
        "minWidth": 300,
        "minHeight": 300,
        "maxWidth": 600,
        "maxHeight": 800,
        "backgroundColor": "#00000000",
        "resizable": false,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": false,
        "transparent": false,
        "center": false,
        "url": "/popover"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
